enum Role {
  MEMBER
  ADMIN
  SUPERADMIN
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  nim      String
  name      String
  avatar    String
  role      Role     @default(MEMBER)
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}